<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <nav class="flex py-4 bg-blue-900 justify-between items-center px-8">
        <div class="h-20">
            <a href="/"><img src="/images/logo3.jpg" alt="logo" class="h-full"></a>
        </div>
        
        <div class="flex justify-between items-center">
            <h2 class="text-white mr-4 text-xl"><i class="fas fa-user mr-2"></i><%= user.firstName %>(admin)</h2>
            <a href="/admin/userslist" class="bg-green-500 font-bold text-white p-2 rounded-lg text-xl hover:bg-green-400 mr-3">View Users</a>
            <a href="/admin/products/new" class="bg-green-500 font-bold text-white p-2 rounded-lg text-xl hover:bg-green-400">Add Product</a>
            <a href="/admin/products" class="bg-green-500 font-bold text-white p-2 rounded-lg text-xl ml-4 hover:bg-green-400">Product List</a>
            <a href="/users/logout" class="bg-green-500 font-bold text-white p-2 rounded-lg text-xl ml-4 hover:bg-green-400">Logout</a>
        </div>
    </nav>
    <main>
        <section class="my-12">
            <% if(message) { %>
                <h2 class="bg-green-200 w-1/3 p-2 rounded-lg my-4 mx-auto"><%= message %></h2>
            <% } %>
            <% users.forEach(user => { %>
                <div class="w-1/3 mx-auto bg-red-200 rounded-lg p-4 mb-4">
                    <h2 class="text-custom text-2xl">First Name: <%= user.firstName %></h2>
                    <h2 class="text-custom text-2xl">Last Name: <%= user.lastName %></h2>
                    <h2 class="text-custom text-2xl">Email: <%= user.email %></h2>
                    <h2 class="text-custom text-2xl">City: <%= user.city %></h2>
                   
                    <div class="my-4">
                        <a href="/admin/block/<%= user.id %>" class="bg-red-500 font-bold text-white p-2 rounded-lg text-xl hover:bg-red-400">Block User</a>
                        <a href="/admin/unblock/<%= user.id %>" class="bg-green-500 font-bold text-white p-2 rounded-lg text-xl ml-4 hover:bg-green-400">Unblock User</a>
                    </div>
                   
                </div>
               
            <% }) %>
        </section>
       
    </main>
    
    
</body>
</html>